{
    "version": 2,
    "builds": [
        {
            "src": "back-end.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "450mb", 
                "memory": 1024 
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "back-end.py"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html" 
        }
    ]
}
